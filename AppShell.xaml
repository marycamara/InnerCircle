<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="InnerCircle.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:InnerCircle"
       Shell.FlyoutBehavior="Disabled"
       Title="InnerCircle">
    <TabBar>

        <Tab Title="DashBoard"> 
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:Views.MainPage}" Route="MainPage" />
            </Tab>


        <Tab Title="Coffee Beans" >
            <ShellContent ContentTemplate="{DataTemplate local:Views.CoffeeBeansPage}" />
        </Tab>

          <Tab Title="Tea" >
            <ShellContent ContentTemplate="{DataTemplate local:Views.TeaPage}" />
        </Tab>


        <Tab Title="Profile" >
            <ShellContent ContentTemplate="{DataTemplate local:Views.ProfilePage}" />
        </Tab>
        
    </TabBar>
</Shell>
